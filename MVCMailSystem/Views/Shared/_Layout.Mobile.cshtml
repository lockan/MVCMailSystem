<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MVC Mobile Mail</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/default/style.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jstree")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Login", "Index", "Login", null, new { @class = "navbar-brand" })
                <!--Removed Home controller link from here-->
                @Html.ActionLink("Inbox", "Index", "MailBox", null, new { @class = "navbar-brand" })
                @Html.ActionLink("Outbox", "Index", "Mail", null, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MVC Mobile Mail - A. Lockhart, Wonho Lim, Terrence Lam </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
